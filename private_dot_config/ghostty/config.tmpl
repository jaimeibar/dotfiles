{{ if eq .chezmoi.os "darwin" }}
# Font family
font-family = Hack Regular Nerd Font Complete Mono
font-family-bold = Hack Bold Nerd Font Complete Mono

# Font size
font-size = 14

# theme
theme = Catppuccin Mocha

macos-option-as-alt = true
{{ else if eq .chezmoi.os "linux" }}
# Linux settings
font-family = MesloLGMDZ Nerd Font

# Font size
font-size = 11

# theme
theme = catppuccin-mocha

gtk-titlebar = true
{{ end }}
cursor-style = block

mouse-hide-while-typing = true
window-decoration = auto

clipboard-read = ask
clipboard-write = ask
clipboard-trim-trailing-spaces = true
clipboard-paste-protection = true

copy-on-select = true

keybind = ctrl+page_up=previous_tab
keybind = ctrl+page_down=next_tab
