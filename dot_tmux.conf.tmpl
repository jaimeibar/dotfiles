# -- general ----------------------------------------------------------------

# Set tmux plugin path env variable
set-environment -gF TMUX_PLUGIN_MANAGER_PATH "$HOME/.tmux/plugins"

# C-b is not acceptable -- Vim uses it
set-option -g prefix C-a

# Allows for faster key repetition. Faster command sequences.
set -s escape-time 10

# Increase repeat timeout
set -sg repeat-time 600

# When enabled, focus events are requested from the terminal if supported and
# passed through to applications running in tmux.
set -s focus-events on

# boost history
set -g history-limit 50000

# Rather than constraining window size to the maximum size of any client
# connected to the *session*, constrain window size to the maximum size of any
# client connected to *that window*. Much more reasonable.
setw -g aggressive-resize on

# auto window rename to reflect current program
set-window-option -g automatic-rename on

# renumber windows when a window is closed
set -g renumber-windows on

# Keep windows around after they exit
set -g remain-on-exit off

# monitor-activity [on | off]
# Monitor for activity in the window. Windows with activity are highlighted
# in the status line.
setw -g monitor-activity on

# visual-activity [on | off | both]
# If on, display a message instead of sending a bell when activity occurs in a
# window for which the monitor-activity window option is enabled. If set to
# both, a bell and a message are produced.
set -g visual-activity on

# Set the time in milliseconds for which the indicators shown by the display-panes command appear.
set -g display-panes-time 2000

# Set the amount of time for which status line messages and other on-screen indicators are displayed.
# If set to 0, messages and indicators are displayed until a key is pressed. time is in milliseconds.
set -g display-time 1000

# Start windows numbering at 1
set -g base-index 1

# Make pane numbering consistent with windows
setw -g pane-base-index 1

# set the client terminal title
set -g set-titles on

# String used to set the window title if set-titles is on.
# - host_short #h Hostname of local host (no domain name)
# - window_index #I Index of window
# - window_name #W Name of window
# - session_name #S Name of session
set -g set-titles-string '#h ● #I ♪ #W ● #S'

# Open new window
bind-key C command-prompt -p "Name of new window: " "new-window -n '%%'"

# create new session
bind C-c new-session

# find session
bind C-f command-prompt -p find-session 'switch-client -t %%'

# Switch back to the last window
bind-key C-a last-window

# Execute commands from path. Reload source file.
bind r source-file $HOME/.tmux.conf \; display-message "Config file reloaded..."

# toggle mouse
bind m if-shell 'tmux show -gv mouse | grep -q off' \
    'set -g mouse on; display "mouse mode on"' 'set -g mouse off; display "mouse mode off"'

# Synchronize panes
bind b if-shell 'tmux show -v synchronize-panes | grep -q off' \
    'setw synchronize-panes; display "Sync panes mode on"' 'setw synchronize-panes; display "Sync panes mode off"'

# -- display -------------------------------------------------------------------

# colors!!!!
# Use modern tmux terminfo (important for nesting & SSH)
set -g default-terminal "tmux-256color"

# Enable passthrough of escape sequences
set -g allow-passthrough on

# Enable terminal capabilities explicitly
set -g terminal-features "ghostty:RGB,tmux-256color:RGB,xterm-256color:RGB,alacritty:RGB"

# Styles

# Set clock hour format. [12 | 24].
setw -g clock-mode-style 24

# Switch to clock mode
bind-key C-t clock-mode

# bell
# Monitor for a bell in the window. Windows with a bell are highlighted in the status line.
setw -g monitor-bell on

# -- end display -------------------------------------------------------------------

# -- navigation ----------------------------------------------------------------

# pane navigation
# hjkl pane traversal
# bind -r h select-pane -L # move left
# bind -r j select-pane -D # move down
# bind -r k select-pane -U # move up
# bind -r l select-pane -R # move right
bind > swap-pane -D       # swap current pane with the next one
bind < swap-pane -U       # swap current pane with the previous one

# switch panes using [Shift]-arrow without prefix
bind -n S-Left select-pane -L
bind -n S-Right select-pane -R
bind -n S-Up select-pane -U
bind -n S-Down select-pane -D

# switch windows using [Ctrl]-arrow without prefix
bind -n C-Left previous-window
bind -n C-Right next-window

# set window split
bind-key v split-window -h -c "#{pane_current_path}"
bind-key h split-window -c "#{pane_current_path}"

# Unbind default split keys(redundat as both are already defined above)
unbind-key '"'
unbind-key '%'
unbind-key '['
unbind-key '{'
unbind-key '}'

# -- copy mode ----------------------------------------------------------------

# Vim copypaste mode
# Use vim keybindings in copy mode
set-window-option -g mode-keys vi

# Enter copy mode with [Ctrl]-up
bind -n C-Up copy-mode

set -g set-clipboard on

set -g word-separators " @-+=:,./?%&#"

bind-key -T copy-mode-vi v send-keys -X begin-selection
{{ if eq .chezmoi.os "linux" -}}
bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "xclip -sel clip"
{{ else if eq .chezmoi.os "darwin" -}}
bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "pbcopy"
{{- end }}

# -- status bar ----------------------------------------------------------------
set -g status-position bottom

# Show or hide the status line.
set-option -g status on

# Update the status line every interval seconds.
# By default, updates will occur every 15 seconds. A setting of zero disables redrawing at interval.
set-option -g status-interval 5

# set align window list (left | centre | right)
set -g status-justify centre

# Set the maximum length of the left component of the status line.
set -g status-left-length 200

# Set the maximum length of the right component of the status line.
set -g status-right-length 140

# Allow programs in the pane to change the window name
set -g allow-rename on

# Resurrect ssh sessions
set -g @resurrect-processes 'ssh'
set -g @resurrect-strategy-vim 'session'
set -g @resurrect-capture-pane-contents 'on'

########################### Tmux Plugin Manager ##############################
# bootstrap tpm
if 'test ! -d "${TMUX_PLUGIN_MANAGER_PATH}/tpm"' {
  run 'git clone https://github.com/tmux-plugins/tpm "${TMUX_PLUGIN_MANAGER_PATH}/tpm"'
  run '${TMUX_PLUGIN_MANAGER_PATH}/tpm/bin/install_plugins'
}

# bootstrap catppuccin
if 'test ! -d "${TMUX_PLUGIN_MANAGER_PATH}/catppuccin"' {
  run 'git clone -b v2.1.3 https://github.com/catppuccin/tmux.git "${TMUX_PLUGIN_MANAGER_PATH}/catppuccin"'
}

# bootstrap custom modules
if 'test ! -d "${TMUX_PLUGIN_MANAGER_PATH}/custom_modules"' {
  run 'mkdir "${TMUX_PLUGIN_MANAGER_PATH}/custom_modules"'
}

if 'test ! -f "${TMUX_PLUGIN_MANAGER_PATH}/custom_modules/ctp_cpu.conf"' {
  run 'curl -s -H "Accept: application/vnd.github.raw+json" https://api.github.com/repos/jaimeibar/dotfiles/contents/dot_tmux/plugins/custom_modules/ctp_cpu.conf --output-dir ${TMUX_PLUGIN_MANAGER_PATH}/custom_modules --create-dirs -o ctp_cpu.conf'
}

if 'test ! -f "${TMUX_PLUGIN_MANAGER_PATH}/custom_modules/ctp_memory.conf"' {
  run 'curl -s -H "Accept: application/vnd.github.raw+json" https://api.github.com/repos/jaimeibar/dotfiles/contents/dot_tmux/plugins/custom_modules/ctp_memory.conf --output-dir ${TMUX_PLUGIN_MANAGER_PATH}/custom_modules --create-dirs -o ctp_memory.conf'
}

if 'test ! -f "${TMUX_PLUGIN_MANAGER_PATH}/custom_modules/primary_ip.conf"' {
  run 'curl -s -H "Accept: application/vnd.github.raw+json" https://api.github.com/repos/jaimeibar/dotfiles/contents/dot_tmux/plugins/custom_modules/primary_ip.conf --output-dir ${TMUX_PLUGIN_MANAGER_PATH}/custom_modules --create-dirs -o primary_ip.conf'
}

# Plugins
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-yank'
# theme / style
set -g @plugin 'joshmedeski/tmux-nerd-font-window-name'
set -g @plugin 'alexwforsythe/tmux-which-key'  # prefix + space
set -g @plugin 'dreknix/tmux-primary-ip'

# tooling
set -g @plugin 'omerxx/tmux-sessionx'          # prefix + o

set -g @plugin 'tmux-plugins/tmux-logging'
# Needed for showing username and hostname in status bar (#U and #H holders).
set -g @plugin 'jaimeibar/tmux-current-pane-hostname'
set -g @plugin 'thewtex/tmux-mem-cpu-load'
set -g @plugin 'tmux-plugins/tmux-sessionist'
set -g @plugin 'tmux-plugins/tmux-open'
set -g @plugin 'tmux-plugins/tmux-copycat'
set -g @plugin 'tmux-plugins/tmux-prefix-highlight'
set -g @plugin 'tmux-plugins/tmux-battery'
set -g @plugin 'tmux-plugins/tmux-cpu'
set -g @plugin 'tmux-plugins/tmux-sidebar'
set -g @plugin 'omerxx/tmux-floax'
set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @plugin 'tmux-plugins/tmux-continuum'
# End of plugins list

### configure plugins
# The empty (shown when prefix is off) prompt and attribute can be configured, It is useful for aligning segments.
set -g @prefix_highlight_empty_prompt ''
# set -g @prefix_highlight_empty_attr 'fg=colour245,bg=colour250'

# The prefix prompt and copy prompt can also be configured
set -g @prefix_highlight_copy_prompt 'Copy'

#### tmux-continuum settings.
# Automatic saving
# Set save interval. The interval is always measured in minutes. Defaults to 15 minutes.
# Set to 0 for stop automatic saving.
set -g @continuum-save-interval '30'

# Automatic restore
# Last saved environment is automatically restored when tmux is started. Uncomment this
# for enabling it.
# set -g @continuum-restore 'on'

# Automatic start
# Tmux is automatically started after the computer/server is turned on.
# To enable automatic start with systemd:
# set -g @continuum-boot 'on'
#### End tmux-continuum settings.

#### tmux side-bar settings
# tree command is needed.
# colorize the tree directory listing in the sidebar.
set -g @sidebar-tree-command 'tree -C'

### https://github.com/catppuccin/tmux
set -g @catppuccin_flavor 'mocha'
set -g @catppuccin_window_status_style 'rounded'
set -g @catppuccin_window_number_position 'left'
set -g @catppuccin_window_status 'no'
set -g @catppuccin_window_default_text '#W'
set -g @catppuccin_window_current_fill 'number'
set -g @catppuccin_window_current_text '#W'
set -g @catppuccin_window_current_color '#{E:@thm_surface_2}'
set -g @catppuccin_date_time_text '%d.%m. %H:%M'
set -g @catppuccin_status_module_text_bg '#{E:@thm_mantle}'

# source the plugin here
run '#{TMUX_PLUGIN_MANAGER_PATH}/catppuccin/catppuccin.tmux'

# load custom moudules
source -F '#{TMUX_PLUGIN_MANAGER_PATH}/custom_modules/ctp_cpu.conf'
source -F '#{TMUX_PLUGIN_MANAGER_PATH}/custom_modules/ctp_memory.conf'
source -F '#{TMUX_PLUGIN_MANAGER_PATH}/custom_modules/primary_ip.conf'

# set left and right status bar
set -g status-left '#{E:@catppuccin_status_session} '
set -gF status-right '#{E:@catppuccin_status_primary_ip}'
set -agF status-right '#{E:@catppuccin_status_ctp_cpu}'
set -agF status-right '#{E:@catppuccin_status_ctp_memory}'
{{ if eq .chezmoi.os "linux" -}}
if-shell 'test -r /sys/class/power_supply/BAT*' {
  set -agF status-right '#{E:@catppuccin_status_battery}'
}
{{ else if eq .chezmoi.os "darwin" -}}
if-shell 'pmset -g batt 2>/dev/null | grep -q InternalBattery' {
  set -agF status-right "#{E:@catppuccin_status_battery}"
}
{{- end }}
set -ag status-right '#{E:@catppuccin_status_date_time}'

# initialize tmux plugin manager and source all plugins
run '#{TMUX_PLUGIN_MANAGER_PATH}/tpm/tpm'
